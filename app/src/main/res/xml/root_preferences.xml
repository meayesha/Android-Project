<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/messages_header">

        <EditTextPreference
            android:key="Username"
            android:title="@string/username"
            />
        <EditTextPreference
            android:key="Status"
            android:title="@string/user_status"/>


    </PreferenceCategory>

    <PreferenceCategory android:title="@string/sync_header">

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/notifications_new_message"
            android:title="@string/title_new_notification_sound" />


        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/key_vibrate"
            android:summary="@string/summary_vibrate"
            android:title="@string/title_vibrate" />


    </PreferenceCategory>

    <Preference
        android:summary="@string/app_version"
        android:title="App Version" />

    <Preference
        android:key="@string/feedback"
        android:title="Send feedback"
        android:summary="Report technical issues or suggest new features"/>

</PreferenceScreen>
